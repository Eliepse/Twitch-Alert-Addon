{
    "manifest_version": 2,
    "name": "Twitch-Alert-Addon",
    "version": "1.0.1",

    "description": "Browser addon that notify the user when a defined twitch streamer is streaming live.",
    "default_locale":"en",

    "icons": {
        "32": "assets/icons/stream-off-32.png"
    },

    "browser_action": {
        "default_icon": "assets/icons/stream-off-32.png",
        "default_title": "Twitch Live Alert",
        "browser_style": true
    },

    "background": {
        "scripts": ["background_scripts/app.js"]
    },
    
    "options_ui": {
        "page": "options_page/options.html",
        "open_in_tab" : true
    },

    "permissions": [
        "https://exemple.com",
        "notifications",
        "storage"
    ]

}
